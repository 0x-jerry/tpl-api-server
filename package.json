{
  "name": "tpl-node-api",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "tsx --watch src/index.ts",
    "start": "node dist/index.js",
    "build": "npm run openapi && tsup",
    "db:migrate": "prisma migrate dev --name init",
    "db:generate": "prisma generate",
    "openapi": "tsx scripts/generateRoutesInfo.ts"
  },
  "tsup": {
    "entry": [
      "src/index.ts",
      "src/routes/**/*.ts"
    ],
    "clean": true,
    "format": [
      "esm"
    ],
    "env": {
      "NODE_ENV": "production"
    },
    "treeshake": true
  },
  "dependencies": {
    "@hono/node-server": "^1.12.0",
    "@hono/swagger-ui": "^0.4.0",
    "@prisma/client": "5.19.1",
    "dotenv": "^16.4.5",
    "hono": "^4.5.0",
    "prisma": "^5.17.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.11",
    "openapi-ts-define": "^0.2.4",
    "tsup": "^8.1.2",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3"
  }
}